<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:layout_margin="16dp">

		<Button
			android:gravity="center"
			android:textAlignment="gravity"
			android:id="@+id/button_select_start"
			android:background="@color/colorPrimary"
			android:text="Select Starting Position"
			android:textColor="@android:color/white"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:onClick="selectStart"
			android:layout_marginBottom="8dp"/>

		<Button
			android:gravity="center"
			android:textAlignment="gravity"
			android:background="@color/colorPrimary"
			android:id="@+id/button_select_destination"
			android:text="Select Destination"
			android:textColor="@android:color/white"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:onClick="selectDestination"
			android:layout_marginBottom="8dp"/>

		<Button
			android:background="@color/colorPrimary"
			android:id="@+id/button_turnOn_left_vista"
			android:text="Turn on Left Vista"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_marginBottom="8dp"
			android:textColor="@android:color/white"/>

		<Button
			android:background="@color/colorPrimary"
			android:id="@+id/button_turnOn_right_vista"
			android:text="Turn on Right Vista"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_marginBottom="8dp"
			android:textColor="@android:color/white"/>

		<Button
			android:background="@color/colorPrimary"
			android:id="@+id/button_start"
			android:text="Start Your Trip"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:onClick="startNavigation"
			android:textColor="@android:color/white"/>

</LinearLayout>